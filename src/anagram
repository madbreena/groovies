class Anagram {

    def subject

    Anagram(String subject) {

        this.subject = subject

    }

    def find(candidates) {

        def subjAr = subject.toLowerCase().toCharArray()
        Arrays.sort(subjAr)
        def wordAr = []
        def winners = []

        for (can in candidates) {


            if (can.toLowerCase() != subject.toLowerCase()) {
                wordAr = can.toLowerCase().toCharArray()
                Arrays.sort(wordAr)

                if (subjAr == wordAr) {

                    winners += can

                }

            }

        }

        winners

    }

}